# Database
DATABASE_URL=postgres://tix:tix_password@localhost:5432/tix_development

# Redis
REDIS_URL=redis://localhost:6379/0

# Devise JWT Secret (generate with: rails secret)
DEVISE_JWT_SECRET_KEY=your-secret-key-here-generate-with-rails-secret

# Frontend URLs (for CORS)
CUSTOMER_PORTAL_URL=http://localhost:5173
AGENT_PORTAL_URL=http://localhost:5174

# Email (development uses letter_opener, production uses SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key
# MAILER_FROM=support@tix.example.com

# Rails
RAILS_ENV=development
RAILS_LOG_TO_STDOUT=true
# RAILS_LOG_LEVEL=info
# RAILS_SERVE_STATIC_FILES=true

# Production host (for email links)
# APP_HOST=your-app.railway.app

# AWS S3 (for file attachments in production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-2
# AWS_S3_BUCKET=your-bucket-name

# Sidekiq UI (optional, for production)
# ENABLE_SIDEKIQ_UI=true
# SIDEKIQ_UI_USERNAME=admin
# SIDEKIQ_UI_PASSWORD=secure-password

# Puma (optional)
# PORT=3000
# RAILS_MAX_THREADS=5
# WEB_CONCURRENCY=2
